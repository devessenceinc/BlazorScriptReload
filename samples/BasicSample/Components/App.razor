@inject NavigationManager NavigationManager
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="app.css" />
    <link rel="stylesheet" href="BasicSample.styles.css" />
    <link rel="icon" type="image/png" href="favicon.png" />
    <HeadOutlet />
    <script>console.log("Shared Inline Script - Reload Not Enabled On Enhanced Navigation - App.razor");</script>
    <script data-reload="always">console.log("Shared Inline Script - Reload Enabled On Enhanced Navigation - App.razor");</script>
</head>

<body>
    <Routes />
    <script src="_framework/blazor.web.js"></script>
    <script type="module" src="interactive.js"></script>
    @if (NavigationManager.Uri.Contains("?reload=true"))
    {
        <ScriptReload />
    }
</body>

</html>
