@inject NavigationManager NavigationManager

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="@querystring">BlazorScriptReload</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@querystring" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@("alert" + querystring)">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Alert
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@("gallery" + querystring)">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Gallery
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@("dynamictext" + querystring)">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Dynamic Text
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="@("weather" + querystring)">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Weather
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private string querystring = "";

    protected override void OnParametersSet()
    {
        if (NavigationManager.Uri.Contains("?reload=true"))
        {
            querystring = "?reload=true";
        }
        else
        {
            querystring = "";
        }
    }
}
